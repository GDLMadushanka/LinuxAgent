{{unit "cdmf.unit.lib.rickshaw-graph"}}

<div id="div-chart-sensorType1" data-websocketurlStream="{{websocketEndpointForStream1}}" data-deviceID="{{device.deviceIdentifier}}" data-sensorType="batterylevel">
    <div class="chartWrapper" id="chartWrapper">
        <div id="yAxisSensorType1" class="custom_y_axis">Battery level</div>
        <div class="legend_container">
            <div id="smoother" title="Smoothing"></div>
            <div id="legend"></div>
        </div>
        <div id="chartSensorType1" class="custom_rickshaw_graph"></div>
        <div class="custom_x_axis">Time</div>
    </div>
</div>
<div id="div-chart-sensorType2" data-websocketurlStream="{{websocketEndpointForStream2}}" data-deviceID="{{device.deviceIdentifier}}" data-sensorType="batterystatus">
